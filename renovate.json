{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "**/package.json"
      ],
      "groupName": "frontend dependencies",
      "description": "Updates for Vue frontend dependencies"
    },
    {
      "matchFileNames": [
        "**/go.mod"
      ],
      "groupName": "backend dependencies",
      "description": "Updates for Go backend modules"
    }
  ]
}
